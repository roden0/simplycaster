# Development Environment Configuration
# SimplyCaster COTURN ICE Server Integration

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Coturn Configuration
COTURN_HOST=localhost
COTURN_PORT=3478
COTURN_TURNS_PORT=5349
COTURN_REALM=simplycast.local
COTURN_SECRET=your-development-secret-key-at-least-32-chars-long
COTURN_USE_SSL=false
COTURN_MIN_PORT=49152
COTURN_MAX_PORT=65535
COTURN_LOG_LEVEL=4
COTURN_VERBOSITY=3

# ICE Server Configuration
TURN_CREDENTIAL_TTL=43200
ICE_CONNECTION_TIMEOUT=30000
ICE_GATHERING_TIMEOUT=10000
ICE_PRIORITY_HOST=126
ICE_PRIORITY_SRFLX=100
ICE_PRIORITY_RELAY=0

# Security Configuration (Relaxed for Development)
TURN_RATE_LIMITING_ENABLED=false
TURN_CREDENTIAL_RATE_LIMIT=100
TURN_CREDENTIAL_RATE_WINDOW=60
TURN_CONNECTION_RATE_LIMIT=200
TURN_CONNECTION_RATE_WINDOW=300

TURN_IP_RESTRICTIONS_ENABLED=false
TURN_ALLOWED_CIDRS=127.0.0.0/8,10.0.0.0/8,192.168.0.0/16
TURN_BLOCKED_IPS=
TURN_MAX_CONNECTIONS_PER_IP=50

TURN_BANDWIDTH_QUOTAS_ENABLED=false
TURN_HOST_QUOTA_MBPS=100
TURN_GUEST_QUOTA_MBPS=50
TURN_QUOTA_WINDOW_SECONDS=3600

TURN_SECRET_ROTATION_ENABLED=false
TURN_SECRET_ROTATION_INTERVAL=168
TURN_SECRET_GRACE_PERIOD=24

# Monitoring Configuration
TURN_HEALTH_CHECKS_ENABLED=true
TURN_HEALTH_CHECK_INTERVAL=30
TURN_HEALTH_CHECK_TIMEOUT=5

TURN_METRICS_ENABLED=true
TURN_METRICS_RETENTION_HOURS=24
TURN_DETAILED_LOGGING=true

TURN_ALERTS_ENABLED=false
TURN_ERROR_RATE_THRESHOLD=10
TURN_RESPONSE_TIME_THRESHOLD=1000
TURN_CONNECTION_FAILURE_THRESHOLD=5

# Master Key for Encryption (Development Only)
TURN_MASTER_KEY=development-master-key-for-encryption-32-chars

# Audit Configuration
TURN_AUDIT_ENABLED=true
TURN_AUDIT_RETENTION_DAYS=30
TURN_AUDIT_LOG_SENSITIVE=true