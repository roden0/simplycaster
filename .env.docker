# Docker Compose Environment Variables
# This file is used by docker-compose to set default values

# Database Configuration
POSTGRES_DB=simplycaster
POSTGRES_USER=simplycaster
POSTGRES_PASSWORD=password

# Application Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
PASSWORD_PEPPER=your-password-pepper-change-in-production
BASE_URL=http://localhost:8000
NODE_ENV=production

# OpenTelemetry Configuration
OTEL_DENO=true
OTEL_SERVICE_NAME=simplycast
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=production
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-lgtm:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# OpenTelemetry Sampling Configuration (Lower sampling for production)
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1
OTEL_METRICS_EXEMPLAR_FILTER=trace_based

# OpenTelemetry Resource Attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=simplycast,service.version=1.0.0,deployment.environment=production

# OTEL-LGTM Stack Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-in-production
LOKI_RETENTION_PERIOD=720h
TEMPO_RETENTION_PERIOD=720h
MIMIR_RETENTION_PERIOD=2160h

# Coturn ICE Server Configuration
COTURN_SECRET=default-turn-secret-change-in-production
COTURN_REALM=simplycast.local
COTURN_EXTERNAL_IP=
COTURN_LOG_LEVEL=3
COTURN_MIN_PORT=49152
COTURN_MAX_PORT=49252
COTURN_HOST=coturn
COTURN_PORT=3478
COTURN_TURNS_PORT=5349